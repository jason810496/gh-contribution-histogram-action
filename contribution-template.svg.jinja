<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
    <!-- Define chart background -->
    <rect x="0" y="0" width="1200" height="600" fill="#f0f1f6"/>

    <!-- Chart grid -->
    <g stroke="#ffffff" stroke-width="1">
        {% set grid_lines = 5 %}
        {% set max_y_value = [max_authored_value, max_reviewed_value]|max * 1.1 %}
        {% for i in range(grid_lines + 1) %}
            {% set y_pos = 550 - (450 * i / grid_lines) %}
            <line x1="100" y1="{{ y_pos }}" x2="1100" y2="{{ y_pos }}" stroke-opacity="0.6"/>
            <text x="70" y="{{ y_pos + 5 }}" font-family="Arial" font-size="14" text-anchor="end" fill="#555555">{{ (max_y_value * i / grid_lines)|int }}</text>
        {% endfor %}
        
        {% for i in range(months|length) %}
            {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
            <line x1="{{ x_pos }}" y1="100" x2="{{ x_pos }}" y2="550" stroke-opacity="0.6"/>
        {% endfor %}
    </g>

    <!-- Chart title -->
    <text x="600" y="50" font-family="Arial" font-size="20" text-anchor="middle" font-weight="bold">
        Contribution History of {{ username }} in {{ repo_owner }}/{{ repo_name }}
    </text>
    
    <!-- X-axis labels (months) -->
    {% for i in range(months|length) %}
        {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
        <text x="{{ x_pos }}" y="580" font-family="Arial" font-size="14" text-anchor="middle" transform="rotate(-45, {{ x_pos }}, 580)">
            {{ months[i] }}
        </text>
    {% endfor %}
    
    <!-- Y-axis label -->
    <text x="30" y="325" font-family="Arial" font-size="16" text-anchor="middle" transform="rotate(-90, 30, 325)">
        Number of Pull Requests
    </text>
    
    <!-- Plot authored PRs line -->
    <polyline
        fill="none"
        stroke="{{ authored_color }}"
        stroke-width="3"
        points="{% for i in range(months|length) %}
            {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
            {% set y_pos = 550 - (450 * authored_values[i] / max_y_value) %}
            {{ x_pos }},{{ y_pos }} {% endfor %}"
    />
    
    <!-- Plot reviewed PRs line -->
    <polyline
        fill="none"
        stroke="{{ reviewed_color }}"
        stroke-width="3"
        points="{% for i in range(months|length) %}
            {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
            {% set y_pos = 550 - (450 * reviewed_values[i] / max_y_value) %}
            {{ x_pos }},{{ y_pos }} {% endfor %}"
    />
    
    <!-- Authored data points -->
    {% for i in range(months|length) %}
        {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
        {% set y_pos = 550 - (450 * authored_values[i] / max_y_value) %}
        <circle cx="{{ x_pos }}" cy="{{ y_pos }}" r="5" fill="{{ authored_color }}" />
    {% endfor %}
    
    <!-- Reviewed data points -->
    {% for i in range(months|length) %}
        {% set x_pos = 100 + (1000 * i / (months|length - 1)) %}
        {% set y_pos = 550 - (450 * reviewed_values[i] / max_y_value) %}
        <circle cx="{{ x_pos }}" cy="{{ y_pos }}" r="5" fill="{{ reviewed_color }}" />
    {% endfor %}
        
    <!-- Authored legend item -->
    <rect x="130" y="145" width="200" height="25" rx="5" ry="5" fill="{{ authored_color }}" fill-opacity="0.3" />
    <text x="140" y="162" font-family="Arial" font-size="14">
        Total PRs Authored: {{ total_authored }}
    </text>
    
    <!-- Reviewed legend item -->
    <rect x="130" y="175" width="200" height="25" rx="5" ry="5" fill="{{ reviewed_color }}" fill-opacity="0.3" />
    <text x="140" y="192" font-family="Arial" font-size="14">
        Total PRs Reviewed: {{ total_reviewed }}
    </text>
</svg>